<h1>Inventory</h1>

<h2><a href='/stock/new'>Add new stock</a></h2>

<table>
  <tr>
    <th>Product</th>
    <th></th>
    <th>Supplier</th>
    <th></th>
    <th>Description</th>
    <th></th>
    <th>Stock</th>
    <th></th>
    <th>Cost</th>
    <th></th>
    <th>Price</th>
    <th></th>
    <th>Markup</th>
    <th></th>
    <th>Edit</th>
    </tr>
    <% for stock in @stock %>
    <tr>
      <td><a href="/products/<%= stock.product_id %>"><%= stock.product.name %></a></td>
      <td>|</td>
      <td><a href="/suppliers/<%= stock.supplier_id %>"> <%= stock.supplier.name %></a></td>
      <td>|</td>
      <td> <%= stock.product.description %></td>
      <td>|</td>
      <td> <%= stock.stock_quantity %></td>
      <td>|</td>
      <td> <%= stock.buying_cost %></td>
      <td>|</td>
      <td> <%= stock.selling_price %></td>
      <td>|</td>
      <td> <%= stock.markup.round %>%</td>
      <td>|</td>
      <td><a href="/stock/<%= stock.id %>/edit">Edit</a></td>
    </tr>
  <% end %>
</table>
